.row
  .col-md-8.mx-auto
    .card.text-center.mt-5
      %h2.card-header
        #{ @article.title }
      .card-body
        %small #{ @article.created_at.strftime( "%b %d %Y") }
        %hr
        %p.card-text
          #{ @article.body }
        - if ( user_signed_in? && @article.user_id == current_user.id )
          %hr
          .row
            .col-md-6
              = link_to "Edit Article", edit_article_path(@article), class: "btn btn-success"
              = link_to "Delete Article", article_path(@article), method: :delete, class: "btn btn-danger",
              data: {confirm: "Do you want to delete this article?"}
